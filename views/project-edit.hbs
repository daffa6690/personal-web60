{{#>layout}}
<div class="container mt-5">
  <h1 class="text-center mb-4"><b>Edit Project</b></h1>

  <!-- FORM -->
  <form action="/project-update/{{project.id}}?_method=PATCH" method="post" enctype="multipart/form-data" class="p-4 border rounded bg-light">
    
    <div class="mb-3">
      <label for="title" class="form-label">Project Name</label>
      <input name="title" type="text" id="title" value="{{project.title}}" class="form-control" />
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <label for="start" class="form-label">Start Date</label>
        <input type="date" id="start" name="start" value="{{formatDate project.startDate}}" class="form-control" />
      </div>
      <div class="col-md-6">
        <label for="end" class="form-label">End Date
        </label>
        <input type="date" id="end" name="end" value="{{formatDate project.endDate}}" class="form-control" />
      </div>
    </div>

    <div class="mb-3">
      <label for="content" class="form-label">Your Project Content</label>
      <textarea name="content" id="content" rows="5" class="form-control">{{project.content}}</textarea>
    </div>

    <div class="mb-3">
      <label class="form-label">Technologies</label>
      <div class="row">
        <div class="col-md-3">
          <div class="form-check">
            <input type="checkbox" id="nodejs" value="nodejs.png" name="technologies" class="form-check-input" {{#if (containsSkill project.skill 'nodejs.png' )}}checked{{/if}} />
            <label for="nodejs" class="form-check-label">Node JS</label>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-check">
            <input type="checkbox" id="express" value="express.png" name="technologies" class="form-check-input" {{#if (containsSkill project.skill 'express.png' )}}checked{{/if}} />
            <label for="express" class="form-check-label">ExpressJS</label>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-check">
            <input type="checkbox" id="reactjs" value="reactjs.png" name="technologies" class="form-check-input" {{#if (containsSkill project.skill 'reactjs.png' )}}checked{{/if}} />
            <label for="reactjs" class="form-check-label">React JS</label>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-check">
            <input type="checkbox" id="typescript" value="typescript.png" name="technologies" class="form-check-input" {{#if (containsSkill project.skill 'typescript.png' )}}checked{{/if}} />
            <label for="typescript" class="form-check-label">TypeScript</label>
          </div>
        </div>
      </div>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Upload Image</label>
      <input type="file" id="image" name="image" class="form-control" />
    </div>

    {{#if project.image}}
    <div class="mb-3">
      <p>Current Image:</p>
      <img src="../assets/uploads/{{project.image}}" alt="Project Image" class="img-thumbnail" width="150" />
    </div>
    {{/if}}

    <div class="text-end">
      <button class="btn btn-primary" type="submit">Save</button>
    </div>
  </form>
</div>
{{/layout}}
