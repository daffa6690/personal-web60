{{#>layout}}
<div class="container py-5">
    <!-- TITLE -->
    <h1 class="text-center mb-4 fw-bold">PROJECTS</h1>

    <!-- CREATE PROJECT BUTTON (Hanya jika user login) -->
    {{#if user}}
    <div class="text-center mb-4">
        <a class="btn btn-primary" href="/addproject">CREATE PROJECT</a>
    </div>
    {{/if}}

    <!-- PROJECT LIST -->
    <div class="row g-4">
        {{#each projects}}
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <img src="{{this.image}}" class="card-img-top" alt="Project Image">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.content}}</p>

                    <!-- SKILLS -->
                    <div class="d-flex gap-2">
                        {{#each this.skillSet}}
                        <img src="/assets/img/{{this}}" alt="{{this}}" class="img-fluid" style="width: 30px; height: 30px;">
                        {{/each}}
                    </div>
                </div>

                <!-- EDIT & DELETE BUTTONS (Hanya jika user adalah pemilik proyek) -->
                {{#if (eq ../user.id this.authorId)}}
                <div class="card-footer d-flex justify-content-between">
                    <a href="/editproject/{{this.id}}" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/projects/{{this.id}}?_method=DELETE" method="post" onsubmit="return submitForm(this, event)">
                        <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                    </form>
                </div>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
</div>

<!-- SWEETALERT DELETE CONFIRMATION -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function submitForm(form, event) {
        event.preventDefault();
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Deleted!",
                    text: "Your file has been deleted.",
                    icon: "success"
                }).then(() => {
                    form.submit();
                });
            }
        });
    }
</script>
{{/layout}}
